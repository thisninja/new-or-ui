{
    "name": "components-library",
    "version": "0.1.32",
    "private": true,
    "description": "Destygo components library",
    "author": "Destygo",
    "scripts": {
        "serve": "vue-cli-service serve",
        "prebuild": "yarn icons:import; yarn icons:prepare",
        "postbuild": "yarn variables",
        "build": "vue-cli-service build --target lib --name components-library src/index.js",
        "lint": "vue-cli-service lint",
        "preversion": "yarn build && git add -A dist",
        "build-storybook": "build-storybook",
        "storybook:build": "vue-cli-service storybook:build -c config/storybook",
        "storybook:serve": "vue-cli-service storybook:serve -p 6006 -c config/storybook",
        "test:unit": "vue-cli-service test:unit",
        "icons:prepare": "vsvg -s svg-icons -t src/compiled-icons",
        "icons:import": "rm -rf ./svg-icons/*; node scripts/svg-icons-importer.js",
        "variables": "cp ./src/styles/_colors.scss ./dist/colors.scss"
    },
    "files": [
        "dist/*",
        "src/*",
        "*.json",
        "*.js",
        ".browserslistrc"
    ],
    "main": "./dist/components-library.umd.min.js",
    "dependencies": {
        "@storybook/vue": "^5.0.6",
        "core-js": "^2.6.5",
        "element-ui": "^2.8.2",
        "emojibase-data": "^4.0.0",
        "frenchkiss": "^0.0.9",
        "vue": "^2.6.6",
        "vue-svgicon": "^3.2.6"
    },
    "devDependencies": {
        "@babel/core": "^7.4.3",
        "@storybook/addon-actions": "^5.0.6",
        "@storybook/addon-storyshots": "^5.0.6",
        "@storybook/addons": "^5.0.6",
        "@vue/cli-plugin-babel": "^3.5.0",
        "@vue/cli-plugin-eslint": "^3.5.0",
        "@vue/cli-plugin-unit-jest": "^3.5.0",
        "@vue/cli-service": "^3.5.0",
        "@vue/eslint-config-airbnb": "^4.0.0",
        "@vue/test-utils": "^1.0.0-beta.29",
        "babel-core": "7.0.0-bridge.0",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^23.6.0",
        "babel-loader": "^8.0.5",
        "babel-plugin-component": "^1.1.1",
        "babel-plugin-dynamic-import-node": "^2.3.0",
        "babel-plugin-require-context-hook": "^1.0.0",
        "babel-preset-vue": "^2.0.2",
        "eslint": "^5.8.0",
        "eslint-plugin-vue": "^5.0.0",
        "exec-then": "^1.3.1",
        "figma-js": "^1.7.0",
        "lint-staged": "^8.1.4",
        "node-sass": "^4.9.0",
        "sass-loader": "^7.1.0",
        "storybook-addon-vue-info": "^1.0.1",
        "vue-cli-plugin-element": "^1.0.1",
        "vue-cli-plugin-storybook": "^0.6.1",
        "vue-template-compiler": "^2.5.21"
    },
    "bugs": {
        "url": "https://github.com/Destygo/components-library/issues"
    },
    "directories": {
        "test": "tests"
    },
    "gitHooks": {
        "pre-commit": "lint-staged"
    },
    "homepage": "https://github.com/Destygo/components-library#readme",
    "license": "ISC",
    "lint-staged": {
        "*.{js,vue}": [
            "vue-cli-service lint",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Destygo/components-library.git"
    }
}
